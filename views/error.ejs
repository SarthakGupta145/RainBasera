<% layout('layouts/boilerplate')%>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger overflow-auto" role="alert">
                <h4 class="alert-heading">
                    <%= err.message%>
                </h4>
                <% if(process.env.NODE_ENV=="production" ){%>
                    <p>
                        <%= err.stack%>
                    </p>
                <% } %>

            </div>
        </div>
    </div>

<!-- if there are error of showing err.stack to users so just remember process.env step at app.css -->